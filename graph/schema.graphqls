# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type Post {
  id: ID!
  title: String!
  content: String!
  author: String!
  allowComments: Boolean!
}

input NewPost {
  title: String!
  content: String!
  author: String!
  allowComments: Boolean!
}

type Query {
  posts: [Post!]!
}

type Mutation {
  createPost(input: NewPost!): Post!
}